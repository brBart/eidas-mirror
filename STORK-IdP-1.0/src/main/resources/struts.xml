<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
    
<struts>
	<package name="eu.stork.idp" extends="struts-default">
		<action name="AuthenticateCitizen" class="eu.stork.idp.actions.AuthenticateCitizenAction">
			<result>/auth.jsp</result>
		</action>
		<action name="Login"  class="eu.stork.idp.actions.LoginAction">
			<result>/callback.jsp</result>
		</action>
		<action name="metadata" method="generateMetadata" class="eu.stork.idp.GenerateMetadataAction">
			<result type="stream">
				<param name="contentType">text/html</param>
				<param name="inputName">inputStream</param>
			</result>
		</action>
	</package>
</struts>
